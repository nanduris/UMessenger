<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graysubtle_bg" >
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/friend_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:background="@drawable/u_button_styling" >

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".SendMessage" 
        android:text="To: XXX"
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp"
        android:textColor="#FFFFFF"
        android:typeface="serif"/>

    <EditText
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/to"
        android:gravity="top|left"
        android:inputType="text"
        android:maxLength="100" />
    
    <TextView
        android:id="@+id/timer_hrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        tools:context=".SendMessage" 
        android:layout_below="@+id/message"
        android:text="Number of Hours (to detect the message):"
        android:textColor="#FFFFFF"
        android:typeface="serif"/>
    
    <EditText
        android:id="@+id/enter_timer_hrs"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer_hrs"
        android:layout_marginLeft="10dp"
        android:gravity="top|left"
        android:inputType="text"
        android:maxLength="100" />
    
  </RelativeLayout>
  
    <RelativeLayout
        android:id="@+id/layout_sel"
        android:layout_below="@+id/friend_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
     
     <Button
         android:id="@+id/button_sel_loc"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/friend_menu"
         android:layout_marginTop="15dp"
         android:background="@drawable/u_button"
         android:layout_centerHorizontal="true"
         android:padding="8dp"
         android:text="Select Location"
         android:textColor="#FFFFFF"
         android:typeface="serif" />
    
    </RelativeLayout>
     
    <RelativeLayout
        android:id="@+id/layout_last"
        android:layout_below="@+id/layout_sel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
     
     <Button
        android:id="@+id/button_main_menu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/u_button"
        android:padding="8dp"
        android:text="Main Menu"
        android:textColor="#FFFFFF"
        android:typeface="serif" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/button_main_menu"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="60dp"
        android:background="@drawable/u_button"
        android:padding="8dp"
        android:text="Logout"
        android:textColor="#FFFFFF" />
</RelativeLayout>
</RelativeLayout>
</ScrollView>