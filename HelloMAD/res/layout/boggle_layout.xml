<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/score_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <AbsoluteLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/background1" >

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="12dp"
                android:layout_y="13dp"
                android:text="SCORE:" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="220dp"
                android:layout_y="13dp"
                android:text="timer" />

            <Button
                android:id="@+id/add_word"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="122dp"
                android:layout_y="101dp"
                android:text="Add Word" />

            <Button
                android:id="@+id/clear_word"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="223dp"
                android:layout_y="101dp"
                android:text="Clear Word" />

            <TextView
                android:id="@+id/list_of_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="16dp"
                android:layout_y="149dp"
                android:text="TextView" />

            <Button
                android:id="@+id/end_game"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_x="255dp"
                android:layout_y="44dp"
                android:text="Exit" />

            <Button
                android:id="@+id/pause"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_x="9dp"
                android:layout_y="44dp"
                android:text="Pause" />

            <Button
                android:id="@+id/resume"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="78dp"
                android:layout_y="45dp"
                android:text="Resume" />

            <Button
                android:id="@+id/new_game"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="168dp"
                android:layout_y="44dp"
                android:text="New Game" />

            <TextView
                android:id="@+id/word_typed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="21dp"
                android:layout_y="111dp"
                android:text="word typed" />

        </AbsoluteLayout>

    </LinearLayout>
  
