<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graysubtle_bg" >
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/friend_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/u_button_styling"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="To: XXX"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_to"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Type: Timer/Teleport"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_type"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:text="Message: XXX"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_msg"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:text="Location:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:typeface="serif" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/last_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_menu"
        android:layout_centerHorizontal="true" >
        
        <Button
        android:id="@+id/button_send"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/u_button"
        android:padding="8dp"
        android:text="Send"
        android:textColor="#FFFFFF"
        android:typeface="serif" />
        </RelativeLayout>
   
        <RelativeLayout
        android:id="@+id/last_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_layout"
        android:layout_centerHorizontal="true" >
        
        <Button
        android:id="@+id/button_main_menu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/u_button"
        android:padding="8dp"
        android:text="Main Menu"
        android:textColor="#FFFFFF"
        android:typeface="serif" />
 
</RelativeLayout>
</RelativeLayout>
</ScrollView>