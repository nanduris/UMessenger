<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graysubtle_bg">
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/u_button_styling"
        android:layout_centerHorizontal="true"
        android:padding="10dp" >
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="Do you want send a message? Select the Type:"
            android:textColor="#FFFFFF"
            android:typeface="serif"
            android:textAppearance="?android:attr/textAppearanceMedium" />
 
        <RadioGroup
            android:id="@+id/radio_msg_type"
            android:layout_below="@+id/textView2"
            android:layout_width="220dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radio_txt_msg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Type your Text"
                android:textColor="#FFFFFF"
                android:typeface="serif" />

            <RadioButton
                android:id="@+id/radio_qa"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Answer a Question"
                android:textColor="#FFFFFF"
                android:typeface="serif" />
        </RadioGroup>
        

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true">
        
        <Button
        android:id="@+id/button_delete"
        android:layout_below="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/u_button"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Delete this Contact!"
        android:textColor="#FFFFFF"
        android:typeface="serif" />
        
        <Button
        android:id="@+id/button_next"
        
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/u_button"
        android:padding="8dp"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:typeface="serif" />

    

    <Button
        android:id="@+id/button_main_menu"
        android:layout_below="@+id/button_delete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/u_button"
        android:padding="8dp"
        android:text="Main Menu"
        android:textColor="#FFFFFF"
        android:typeface="serif" />
    
    
    </RelativeLayout>

</RelativeLayout>
</ScrollView>