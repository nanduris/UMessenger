<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graysubtle_bg">
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/friend_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/u_button_styling"
        android:layout_centerHorizontal="true"
        android:padding="10dp" >

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="To: XXX"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="serif"
            tools:context=".SendMessage" />

        <EditText
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/to"
            android:gravity="top|left"
            android:inputType="text|textMultiLine"
            android:maxLength="80" />

        <TextView
            android:id="@+id/timer_hrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:text="Timer Expires in"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:typeface="serif"
            tools:context=".SendMessage" />

        <EditText
            android:id="@+id/enter_timer_hrs"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/timer_hrs"
            android:ems="10"
            android:gravity="top|left"
            android:inputType="text"
            android:maxLength="2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/timer_hrs"
            android:layout_alignBottom="@+id/timer_hrs"
            android:layout_alignRight="@+id/message"
            android:text="hours"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:typeface="serif" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_last"
        android:layout_below="@+id/friend_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        
    <Button
        android:id="@+id/button_sel_loc"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/u_button"
        android:padding="8dp"
        android:text="Select Location"
        android:textColor="#FFFFFF"
        android:typeface="serif" />
    
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_last2"
        android:layout_below="@+id/layout_last"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/button_main_menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/u_button"
        android:padding="8dp"
        android:text="Main Menu"
        android:textColor="#FFFFFF"
        android:typeface="serif" />

</RelativeLayout>
</RelativeLayout>
</ScrollView>